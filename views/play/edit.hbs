

        <main>
            <form class="theater-form" action="/play/edit/{{play._id}}" method="POST">
                <h1>Edit Theater</h1>
                <div>
                    <label for="title">Theater Title:</label>
                    <input name = "title" type="text" placeholder="Theater name"value="{{play.title}}">
                </div>
                <div>
                    <label for="description">Theater Description:</label>
                    <textarea name = "description" placeholder="Description" >{{play.description}}</textarea>
                </div>
                <div>
                    <label for="imageUrl">Image url:</label>
                    <input name = "imageUrl" type="text" placeholder="Image Url" value="{{play.imageUrl}}">
                </div>
                <div class="check">
                    <input  name = "public" type="checkbox" id="check-box" >
                    <label for="check-box"{{#if play.public}}checked{{/if}}>Public</label>
                </div>
                <button class="btn" type="submit">Submit</button>
            </form>
        </main>
